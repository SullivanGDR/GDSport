{% extends 'base.html.twig' %}

{% block title %}Vos informations{% endblock %}

{% block body %}
<div class="container-fluid d-block d-lg-flex offset-xxl-1">
	<div class="col-12 col-md-12 col-lg-7 bg-white p-5 text-black m-0 mt-3 mb-3 m-lg-3 rounded-5 shadow">
		<h4 class="mb-3">Vos informations</h4>
		{{ form_start(infoCommandeForm) }}
		<div class="row g-3">
			<div class="col-sm-6">
				{{ form_row(infoCommandeForm.nom) }}
			</div>
			<div class="col-sm-6">
				{{ form_row(infoCommandeForm.prenom) }}
			</div>

			<div class="col-12">
				{{ form_row(infoCommandeForm.email) }}
			</div>

			<div class="col-12">
				{{ form_label(infoCommandeForm.adresse, 'Adresse', {'label_attr': {'class': 'fw-bold'}}) }}
                {{ form_row(infoCommandeForm.adresse) }}
			</div>

			<div class="col-md-4">
				{{ form_label(infoCommandeForm.ville, 'Ville', {'label_attr': {'class': 'fw-bold'}}) }}
                {{ form_row(infoCommandeForm.ville) }}
			</div>

			<div class="col-md-5">
				{{ form_label(infoCommandeForm.pays, 'Pays', {'label_attr': {'class': 'fw-bold'}}) }}
                {{ form_row(infoCommandeForm.pays) }}
			</div>

			<div class="col-md-3">
				{{ form_label(infoCommandeForm.codePostal, 'Code postal', {'label_attr': {'class': 'fw-bold'}}) }}
                {{ form_row(infoCommandeForm.codePostal) }}
			</div>
		</div>
	</div>
	<div class="col-md-12 col-lg-4 col-xl-3 bg-white p-5 text-black m-3 rounded-5 shadow" style="max-height:576px;">
		<h4 class="mb-3">Méthode de livraison</h4>
		{% for method in infoCommandeForm.livraison %}
			{% if method.vars.value == "express" %}
					<div class="d-flex justify-content-between">
						<div>
							{{ form_widget(method) }}
							{{ form_label(method) }}
						</div>
						<span>9.95 €</span>
					</div>
					<p class="text-success"> Date de livraison estimée : {{ date2|date('d M.') }}</p>
			{% elseif method.vars.value == "standard" %}
				<span class="d-flex justify-content-between">
					<div>{{ form_widget(method) }}
					{{ form_label(method) }}</div> Gratuit</span>
					<p class="text-success"> Date de livraison estimée : {{ date6|date('d M.') }}</p>
			{% endif %}
		{% endfor %}

	</div>
</div>
<div class="d-block">{{ form_row(infoCommandeForm.suivant) }}</div>
	{{ form_end(infoCommandeForm) }}


{% endblock %}