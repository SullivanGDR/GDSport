{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="container d-flex justify-content-center mt-5 mb-5">
		<div class="col-md-7 col-lg-7 p-5 m-0 text-black bg-white">
			<h1 class="mb-3">Mot de passe oublié</h1>

			{{ form_start(requestForm) }}
			    {{ form_row(requestForm.email) }}
			<div>
				<small class="mt-3">
					Entrez votre adresse mail pour recevoir un lien de réinitialisation.
				</small>
			</div>

			<button class="btn btn-primary mt-3">Envoyer</button>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}

